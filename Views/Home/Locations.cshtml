@model Infoscreen.Models.Location
@{
    Layout = null; // fullscreen look
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@Model.Name</title>
    <style>
        body { margin:0; font-family: Arial; }
        .screen { height:100vh; display:flex; flex-direction:column; }
        .top { padding:16px; display:flex; justify-content:space-between; align-items:center; }
        .title { font-size:48px; font-weight:700; }
        .logo img { height:70px; }

        .middle { flex:1; display:grid; grid-template-columns: 2fr 1fr; gap:16px; padding:16px; }
        .floors { border:2px solid #ddd; padding:16px; overflow:auto; }
        .right { display:flex; flex-direction:column; gap:16px; }
        .photo { border:2px solid #ddd; padding:8px; }
        .photo img { width:100%; height:auto; display:block; }
        .contact { border:2px solid #ddd; padding:16px; }
        .contact h2 { margin:0 0 8px 0; }

        .bottom { background:#f2c200; padding:12px 16px; display:flex; justify-content:space-between; font-size:28px; font-weight:700; }
        pre { white-space:pre-wrap; font-size:18px; margin:0; }
    </style>
</head>
<body>
<div class="screen">
    <div class="top">
        <div class="title">@Model.Name</div>
        <div class="logo">
            <img src="@Model.LogoUrl" alt="logo" />
        </div>
    </div>

    <div class="middle">
        <div class="floors">
            <pre>@Model.FloorsInfo</pre>
        </div>

        <div class="right">
            <div class="photo">
               <img src="@Model.ImageUrl" alt="building" />
          </div>

            <div class="contact">
                <h2>Kontakta oss</h2>
                <pre>@Model.ExtraInfo</pre>
            </div>

        </div>
    </div>

    <div class="bottom">
        <div id="date"></div>
        <div id="time"></div>
    </div>
</div>

<script>
    function tick(){
        const d = new Date();
        const date = d.toLocaleDateString('sv-SE', { day:'2-digit', month:'long', year:'numeric' });
        const time = d.toLocaleTimeString('sv-SE', { hour:'2-digit', minute:'2-digit' });
        document.getElementById('date').innerText = date;
        document.getElementById('time').innerText = time;
    }
    tick();
    setInterval(tick, 1000);
</script>
</body>
</html>
